{
	"root": true,
	"extends": [
		"eslint:recommended"
	],
	"env": {
		"node": true,
		"mocha": true,
		"browser": true,
		"es6": true
	},
	"rules": {
		"quotes": ["error", "double"],
		"no-undef": "error",
		"brace-style": "error",
		"eol-last": "error",
		"indent": ["error", "tab", { "SwitchCase": 1 }],
		"no-extra-bind": "warn",
		"no-empty": "off",
		"no-multiple-empty-lines": "error",
		"no-multi-spaces": "error",
		"no-process-exit": "warn",
		"space-in-parens": "error",
		"no-trailing-spaces": "error",
		"no-unused-vars": "error",
		"key-spacing": "error",
		"space-infix-ops": "error",
		"no-unsafe-negation": "error",
		"no-loop-func": "warn",
		"space-before-function-paren": ["error", "never"],
		"space-before-blocks": "error",
		"object-curly-spacing": ["error", "always"],
		"keyword-spacing": ["error", {
			"after": false,
			"overrides": {
				"try": {"after": true},
				"else": {"after": true},
				"throw": {"after": true},
				"case": {"after": true},
				"return": {"after": true},
				"finally": {"after": true},
				"do": {"after": true}
			}
		}],
		"no-console": "off",
		"valid-jsdoc": "error",
		"no-useless-computed-key": "error",
		"prefer-const": "error"
	}
}
